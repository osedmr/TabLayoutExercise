    <style name="Theme.TabLayoutExercise" parent="Base.Theme.TabLayoutExercise" />

    <style name="TabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">

        <item name="android:background">#7EBAB9</item>
        <item name="tabMode">scrollable</item>
        <item name="colorPrimary">#FFD600</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabSelectedTextColor">#485E71</item>
        <item name="tabIndicatorColor">#2962FF</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabTextAppearance">@style/TextAppearance</item>

        <item name="tabRippleColor">#FFFFFF</item>
        <item name="tabPadding">8dp</item>

        <item name="tabIndicatorAnimationMode">elastic</item>
    </style>

    <style name="TextAppearance" parent="TextAppearance.AppCompat.Headline">

        <item name="android:textSize">24sp</item>
    </style>
